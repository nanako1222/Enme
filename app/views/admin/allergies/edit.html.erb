<div class="container">
  <div class="row">
    <div class='col-12'>
      <h4 class="col-md-5 mt-5">アレルゲン編集</h4>


      <div class="row">
        <div class='col-md-5 mt-5'>
          <%= form_with model: @allergy, url: admin_allergy_path, method: :patch do |f| %>

            <div class="field d-grid col-md-10 mt-4">
              <%= f.label :アレルゲン, class: "col-8" %>
              <%= f.text_field :allergen %>
            </div>
            <div class="row form-group mt-4 offset-3">
              <%= f.submit '編集', class:"btn btn-success col-3" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
