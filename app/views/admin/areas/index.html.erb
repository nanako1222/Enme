<div class="container">
  <div class="row">
    <div class='col-12'>
      <h4 class="col-3 mt-5 offset-2">地域一覧</h4>

      <div class="row">
        <table class="table table-hover col-8 mt-3 offset-2">
          <thead class="table-secondary">
            <th>都道府県</th>
          </thead>
          <% @states.each do |state| %>
            <tr>
              <td>
                <%= link_to state.state, admin_areas_path(state.id) %>
              </td>
            </tr>
          <% end %>
        </table>
        <div class="offset-9 mt-3"><%= paginate @states %></div>
      </div>
    </div>
  </div>
</div>