<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <% if flash[:notice] %>
        <%= notice %>
      <% end %>
      <h4 class="col-4 mt-5">マイページ</h4>

      <div class='flashing mt-2'>
        <p>※現在登録されているデータは架空です</p>
      </div>

      <table class="table table-hover table-inverse item-show mt-4">
        <h5 class="mt-4">
          登録情報
          <%= link_to customers_information_edit_path, class:"btn btn-success active ml-4" do %>
            <i class="fas fa-user-edit"></i>
            編集する
          <% end %>
        </h5>
        <tr>
          <th>氏名</th>
          <td><%= @customer.full_name %>

          </td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>都道府県</th>
          <td><%= @state %></td>
        </tr>
        <tr>
          <th>地域エリア</th>
          <td><%= @area %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>アレルギー</th>
          <td>
            <% @customer.allergies.each do |allergy| %>
              <%= allergy.allergen %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>