<div class="container">
  <div class="row">
    <div class="col-md-11 offset-1">
      <h4 class="col-3 mt-5">新規会員登録</h4>

      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do  |f| %>
        <%= render "customer/shared/error_messages", resource: resource %>

        <div class="row field d-grid text-center mt-3 mt-4">
          <span class="col-md-3 text-left">名前</span>
          <%= f.label :（姓）, class: "col-md-1" %>
          <%= f.text_field :first_name, autofocus: true, required: true, class: "col-md-3" %>
          <%= f.label :（名）, class: "col-md-1" %>
          <%= f.text_field :last_name, autofocus: true, required: true, class: "col-md-3" %>
        </div>


        <div class="row field d-grid text-center mt-3">
          <span class="col-md-3 text-left">フリガナ</span>
          <%= f.label :セイ, class: "col-md-1" %>
          <%= f.text_field :first_name_kana, autofocus: true, required: true, class: "col-md-3" %>
          <%= f.label :メイ, class: "col-md-1" %>
          <%= f.text_field :last_name_kana, autofocus: true, required: true, class: "col-md-3" %>
        </div>

        <div class="row field d-grid text-center mt-3">
          <%= f.label :メールアドレス, class: "col-md-4 text-left" %>
          <%= f.email_field :email, autofocus: true, class: "col-md-3" %>
        </div>

        <div class="row field d-grid text-center mt-3">
          <%= f.label :住所（都道府県）, class: "col-md-4 text-left" %>
          <%= f.collection_select :state_id , State.all,:id,:state %>
        </div>

        <div class="row field d-grid text-center mt-3">
          <%= f.label :住所（地域エリア）, class: "col-md-4 text-left" %>
          <div id="areas_select" >
            <%= render partial: 'shared/areas', locals: { areas: Area.all } %>
          </div>
        </div>

        <p style="text-align:center;">
          ※エリア分け詳細は
          <%= link_to "こちら", about_path, class: "btn btn-outline-info btn-sm" %>
          をご参考ください
        </p>

        <div class="row field d-grid text-center mt-3">
          <%= f.label :電話番号（ハイフンなし）, class: "col-md-4 text-left" %><br />
          <%= f.text_field :telephone_number, autofocus: true, class: "col-md-3" %>
        </div>

        <div class="row field d-grid text-center mt-3">
          <div class="col-md-4 text-left">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
          </div>
          <%= f.password_field :password, class: "col-md-3" %>
        </div>

        <div class="row field d-grid text-center mt-3">
          <%= f.label :パスワード（確認用）, class: "col-md-4 text-left" %><br />
          <%= f.password_field :password_confirmation, class: "col-md-3" %>
        </div>

        <div class="actions2 mt-4 offset-4">
          <%= button_tag type: :submit, class: "btn btn-success active" do %>
            <i class="fas fa-user-plus"></i> 新規登録
          <% end %>
        </div>

        <h6 class="col-3 mt-4">既に登録済みの方</h6>
        <div class="row offset-1">
          <p>
            <%= link_to "こちら", new_customer_session_path, class: "btn btn-outline-info btn-sm" %>
            からログインしてください。
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
